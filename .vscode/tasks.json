// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "viewer",
      "type": "flutter",
      "group": "build",
      "options": {
        "cwd": "viewer"
      },
      "command": "flutter",
      "args": ["build", "web", "--csp", "--release", "--pwa-strategy", "none"]
    },
    {
      "label": "watch",
      "type": "npm",
      "script": "watch",
      "problemMatcher": ["$ts-webpack-watch", "$tslint-webpack-watch"],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "dependsOn": "viewer",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "test-watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    }
  ]
}
